<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="tbUserName" Text="Имя пользователя"  VerticalAlignment="Top" HorizontalAlignment="Right" MinWidth="500" MinHeight="25" Margin="20"></TextBox>
        <Button x:Name="bConnDiconn" Click="Button_Click" Content="Подключиться" VerticalAlignment="Top" HorizontalAlignment="Left" MinWidth="200" MinHeight="25" Margin="20"></Button>
        <ListBox BorderThickness="2" x:Name="lbChat" MinHeight="280" MinWidth="600" Margin="20,53,35,117"></ListBox>
        <TextBox x:Name="tbMessage" VerticalAlignment="Bottom" HorizontalAlignment="Center" MinWidth="750" Margin="10 0 10 4" MinHeight="65" KeyDown="tbMessage_KeyDown"></TextBox>
    </Grid>
</Window>
